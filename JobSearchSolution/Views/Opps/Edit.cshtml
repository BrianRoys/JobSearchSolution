                @Html.ValidationMessageFor(model => model.Opp.DateOpened, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Opp.Status, "Status", htmlAttributes: new { @class = "control-label col-md-2" })
