            <div class="col-md-10">
                @Html.EditorFor(model => model.Opp.HasBeenReported, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Opp.HasBeenReported, "", new { @class = "text-danger" })
            </div>
        </div>

		<div class="form-group">
			@Html.LabelFor(model => model.Opp.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.Opp.IsActive, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.Opp.IsActive, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.AllContacts, "Opps", htmlAttributes: new { @class = "control-label col-md-2" })
